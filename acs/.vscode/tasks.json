      ]
    },
    {
      "label": "build",
      "dependsOn": [
        "main_build",
        "tstsrv_build"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "main_build",
      "type": "shell",
      "command": "make -f ../Makefile -j$(nproc) |& mawk -Winteractive 'BEGIN{ORS=\"\"} /Entering directory/ { curdir=substr($4,2,length($4)-2) }  /(warning|error):/ { print curdir \"/\" } { print $0 \"\\n\" }'",
      "group": {
        "kind": "build"
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "tstsrv_build",
      "type": "shell",
      "command": "(cd net_am64x; make -f ../../Makefile -j$(nproc) lscs_tstsrv_am64x) |& mawk -Winteractive 'BEGIN{ORS=\"\"} /Entering directory/ { curdir=substr($4,2,length($4)-2) }  /(warning|error):/ { print curdir \"/\" } { print $0 \"\\n\" }'",
      "group": {
        "kind": "build"
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "Stock Build",
      "type": "shell",
      "command": "make",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    },
    {
      "label": "build-orig",
      "type": "shell",
      "command": "make -f ../Makefile -j$(nproc)",
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "deploy-glc",
      "type": "shell",
      "command": "sh",
      "args": [
        ".vscode/deploy-all-binaries.sh",
        "${config:GLC.TARGET_IP}",
